---
import { slide } from "astro:transitions";
import "../styles/global.css";
import ClientRouter from "astro/components/ClientRouter.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

const { description, image } = Astro.props;
---

<!doctype html>
<html
  lang="es"
  class="bg-gray-900 text-gray-100 font-mono min-h-screen flex flex-col"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>En construcción...</title>
    <link rel="icon" href="/favicon.png" type="image/svg+xml" />
    <meta name="description" content="Sitio en construcción, vuelva pronto" />
    <meta property="og:image" content="../assets/construccion-web.jpg" />
    <ClientRouter />
  </head>

  <body
    transition:animate={slide({ duration: "1s" })}
    class="flex flex-col flex-1"
  >
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
